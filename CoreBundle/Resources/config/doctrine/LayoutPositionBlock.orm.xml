<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Gravity\CoreBundle\Entity\LayoutPositionBlock" table="layout_position_block" inheritance-type="JOINED">
    <discriminator-column name="block_type" type="string"/>

    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <many-to-one field="block" target-entity="Gravity\CoreBundle\Entity\Block">
      <join-columns>
        <join-column name="block_id" referenced-column-name="id" nullable="1"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="position" target-entity="Gravity\CoreBundle\Entity\LayoutPosition" inversed-by="layouts">
      <join-columns>
        <join-column name="layout_position_id" referenced-column-name="id" nullable="1"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="layout" target-entity="Gravity\CoreBundle\Entity\Layout" inversed-by="positions">
      <join-columns>
        <join-column name="layout_id" referenced-column-name="id" nullable="1"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
